package com.vicky.AnnotationHelloWorld;

import org.springframework.context.ApplicationContext;
import org.springframework.context.annotation.AnnotationConfigApplicationContext;
import org.springframework.context.annotation.ComponentScan;
import org.springframework.context.annotation.Configuration;

/**
 * Hello world!
 *
 */

@Configuration
@ComponentScan(basePackages="com.vicky.Annotation.HelloWorld.POJO.Hello")
public class App 
{
    public static void main( String[] args )
    {
        ApplicationContext application = new AnnotationConfigApplicationContext(App.class);
        application.getBean("helloobj");
    }
}
